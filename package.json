{
  "name": "law-office-management",
  "version": "1.0.0",
  "description": "نظام إدارة مكتب المحاماة - Algerian Law Office Management System",
  "main": "electron/loader.cjs",
  "scripts": {
    "start": "electron-forge start",
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "electron-builder",
    "package": "electron-forge package",
    "rebuild": "electron-rebuild -f -w sqlite3,bcrypt",
    "postinstall": "electron-rebuild -f -w sqlite3,bcrypt",
    "build-win": "npm run build && npm run electron:build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "db:seed": "node electron/database/seed.js",
    "db:migrate:clientrole": "node electron/database/migrateCaseClientRole.js"
  },
  "keywords": [
    "electron",
    "react",
    "vite",
    "law-office",
    "algeria"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@react-pdf/renderer": "^4.3.1",
    "@tanstack/react-table": "^8.20.5",
    "bcrypt": "^6.0.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.2.0",
    "moment": "^2.30.1",
    "node-machine-id": "^1.1.12",
    "react": "^18.3.1",
    "react-big-calendar": "^1.19.4",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.5",
    "react-toastify": "^11.0.5",
    "sequelize": "^6.37.3",
    "sqlite3": "^5.1.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-fuses": "^7.2.0",
    "@electron-forge/plugin-vite": "^7.2.0",
    "@electron/fuses": "^1.6.0",
    "@electron/rebuild": "^4.0.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3",
    "vite": "^5.3.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.ti.lawofficemanagement",
    "productName": "Law Office Management",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "!electron/licensing/**/*.md",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "icon": "build/app.jpg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "include": "build/installer.nsh",
      "perMachine": false,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "warningsAsErrors": false,
      "differentialPackage": false,
      "installerLanguages": [
        "en",
        "ar"
      ],
      "installerHeader": "build/app.jpg",
      "multiLanguageInstaller": true
    }
  }
}
